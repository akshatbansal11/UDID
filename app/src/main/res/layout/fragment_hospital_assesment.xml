<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="@dimen/dp_20"-->
<!--                    android:text="Hospital for assessment/issue of UDID card/ diability certtificate "-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="@dimen/sp_20" />-->

                <TextView
                    android:id="@+id/tvEnrollmentNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/hospital_treating_disability"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/etEnrollNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/curve_all_corner_grey"
                    android:maxLength="50"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="@string/test_new"
                    android:clickable="false"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:singleLine="true" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

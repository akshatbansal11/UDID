<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ClickAction"
            type="com.udid.ui.activity.UpdateAadharNumberActivity.ClickActions" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.UpdateAadharNumberActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/toolbar_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackPress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="40dp"
                android:onClick="@{ClickAction::backPress}"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:fontFamily="@font/poppins_medium"
                android:text="Update Aadhaar Number"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                app:layout_constraintBottom_toBottomOf="@+id/ivBackPress"
                app:layout_constraintStart_toEndOf="@+id/ivBackPress"
                app:layout_constraintTop_toTopOf="@+id/ivBackPress" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:layout_marginVertical="@dimen/dp_30"
                android:elevation="@dimen/dp_4"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="@dimen/dp_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeading">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_90"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clToolbar">

            <RelativeLayout
                android:id="@+id/rlBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/llParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tvCurrentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="Current Aadhaar Number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/etCurrentAadhaarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_stroke_thin_grey"
                        android:fontFamily="@font/opensans_regular"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_8"
                        android:singleLine="true"
                        android:textColor="#6B6B6B"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvUpdatedName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/updated_aadhaar_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_stroke_thin_grey">

                        <EditText
                            android:id="@+id/etUpdatedAadhaarNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="Aadhaar No."
                            android:inputType="number"
                            android:maxLength="12"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_8"
                            android:singleLine="true"
                            android:textColor="#6B6B6B"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/ivTogglePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginEnd="10dp"
                            android:onClick="@{ClickAction::toggleEye}"
                            android:padding="4dp"
                            android:src="@drawable/ic_eye_off" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvIdentityProof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/identity_proof"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/etIdentityProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_stroke_thin_grey"
                        android:fontFamily="@font/opensans_regular"
                        android:hint="@string/select_identity_proof"
                        android:onClick="@{ClickAction::identityProof}"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_8"
                        android:singleLine="true"
                        android:textColor="#6B6B6B"
                        android:textSize="@dimen/sp_14"
                        app:drawableEndCompat="@drawable/ic_arrow_down" />

                    <TextView
                        android:id="@+id/tvUploadDocument"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_7"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/upload_document"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:id="@+id/llUploadFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_all_corner_white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvChooseFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:background="@drawable/back_number_gray"
                            android:gravity="center"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_marginVertical="@dimen/dp_5"
                            android:onClick="@{ClickAction::uploadFile}"
                            android:padding="@dimen/dp_10"
                            android:text="@string/choose_file"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/etFileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.6"
                            android:layout_gravity="center"
                            android:hint="@string/no_file_chosen"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="Please Upload Supporting Document."
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvReasonToUpdateName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/reason_to_update_aadhaar_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/etReasonToUpdateAadhar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_stroke_thin_grey"
                        android:fontFamily="@font/opensans_regular"
                        android:hint="@string/select_reason_to_update_aadhaar_number"
                        android:onClick="@{ClickAction::reasonToUpdateAadhaar}"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_8"
                        android:textColor="#6B6B6B"
                        android:textSize="@dimen/sp_14"
                        app:drawableEndCompat="@drawable/ic_arrow_down" />

                    <TextView
                        android:id="@+id/tvAnyOtherReason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="Any Other Reason"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/etAnyOtherReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_stroke_thin_grey"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLength="500"
                        android:minLines="5"
                        android:overScrollMode="always"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_8"
                        android:textColor="#6B6B6B"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvGenerateOtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/curve_fill_blue"
                        android:backgroundTint="@color/darkBlue"
                        android:fontFamily="@font/opensans_semibold"
                        android:onClick="@{ClickAction::generateOtp}"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="Generate OTP"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/llParent"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/llOtp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginVertical="@dimen/dp_25"
                        android:background="#D4D4D4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_margin="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@drawable/curve_all_corner_white"
                        android:elevation="@dimen/dp_5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tvSixDigitOtp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="A six digit OTP will be sent to your registered mobile no."
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <EditText
                            android:id="@+id/etEnterOtp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_stroke_thin_grey"
                            android:ems="6"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="Enter the OTP"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_8"
                            android:singleLine="true"
                            android:textColor="#6B6B6B"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tvSubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="@dimen/dp_15"
                            android:background="@drawable/curve_fill_blue"
                            android:backgroundTint="@color/darkBlue"
                            android:paddingHorizontal="@dimen/dp_40"
                            android:paddingVertical="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:onClick="@{ClickAction::submit}"
                            android:text="@string/submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
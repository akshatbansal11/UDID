<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Upload Image"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtImageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="No Image Selected"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/btnUploadSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:text="Upload Signature"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtSignStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="No Signature Selected"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/btnUploadPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:text="Upload PDF"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtPdfStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="No PDF Selected"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_500"
        android:text="Proceed"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>
